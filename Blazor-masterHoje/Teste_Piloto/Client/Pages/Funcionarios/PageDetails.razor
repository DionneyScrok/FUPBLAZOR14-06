
    <EditForm Model="@Funcionario" OnInvalidSubmit="@OnValidSubmit">
        <div class="form-group">
            <h3> <strong> Data Contratação: </strong> @Funcionario.DataContratacao </h3>
        </div>
        <div class="form-group">
            <h3> <strong> Nome: </strong> @Funcionario.NomeFuncionario </h3>
        </div>
        <div class="form-group">
            <h3> <strong> RG: </strong> @Funcionario.Rg </h3>
        </div>
        <div class="form-group">
            <h3> <strong> CPF: </strong> @Funcionario.Cpf </h3>
        </div>
        <div class="form-group">
            <h3> <strong> Gênero: </strong> @Funcionario.Genero </h3>
        </div>
        <div class="form-group">
            <h3> <strong> Data Nascimento: </strong> @Funcionario.Datanascimento </h3>
        </div>
        <div class="form-group">
            <h3> <strong> Email: </strong> @Funcionario.Email </h3>
        </div>
        <div class="form-group">
            <h3> <strong> Telefone: </strong> @Funcionario.Telefone </h3>
        </div>
        <div class="form-group">
            <h3> <strong> Salário: </strong> @Funcionario.SalarioFuncionario </h3>
        </div>
        <div class="form-group">
            <h3> <strong> Nome Chefe: </strong> @Funcionario.NomeChefe </h3>
        </div>
        <div class="form-group">
            <h3> <strong> Data Demissão: </strong> @Funcionario.DataDemissao </h3>
        </div>

        <button type="submit" class="btn btn-primary" @onclick="OnValidSubmit">@ButtonText</button>

    </EditForm>


@code
{
    [Parameter] public Funcionario Funcionario { get; set; }
    [Parameter] public string ButtonText { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
