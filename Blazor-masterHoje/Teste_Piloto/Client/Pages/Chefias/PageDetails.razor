    <EditForm Model="@Chefia" OnInvalidSubmit="@OnValidSubmit">
        <div class="form-group">
            <h3> <strong>Nome: </strong> @Chefia.NomeChefia </h3>
        </div>
        <div class="form-group">
            <h3> <strong> Setor: </strong> @Chefia.Setor </h3>
        </div>
        <div class="form-group">
            <h3> <strong> Email: </strong> @Chefia.Email </h3>
        </div>
        <div class="form-group">
            <h3> <strong> Telefone: </strong> @Chefia.Telefone </h3>
        </div>
        
        <button type="submit" class="btn btn-primary" @onclick="OnValidSubmit">@ButtonText</button>

    </EditForm>


@code
{
    [Parameter] public Chefia Chefia { get; set; }
    [Parameter] public string ButtonText { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
